<%if @game.current_turn == @game.player_1 %>
  <div><%= @game.player_2.player_name%> attacked <%= @game.player_1.player_name %></div>
  <div><%= @game.player_1.player_name %>'s score is: <%= @game.player_1.score %> HP</div>
<% else %>
  <div><%= @game.player_1.player_name%> attacked <%= @game.player_2.player_name %></div>
  <div><%= @game.player_2.player_name %>'s score is: <%= @game.player_2.score %> HP</div>
<% end %>



<form action="/play" method="submit">
  <input type="submit" value="Ok">
</form>
